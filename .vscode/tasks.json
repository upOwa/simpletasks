{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "test",
      "type": "shell",
      "command": ". venv/bin/activate && tox -e flake8 && tox -e mypy && tox -e black && tox -e quick",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "coverage",
      "type": "shell",
      "command": ". venv/bin/activate && pytest -v --cov=simpletasks --cov-report html",
      "problemMatcher": []
    }
  ]
}
